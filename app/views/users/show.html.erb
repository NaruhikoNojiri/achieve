<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
      <h3>フォローユーザーの一覧</h3>
      <% @followed_users.each do |user| %>
        <p>
          <%= profile_img(user) %>
          <%= user.email %>
        </p>
      <% end %>
    </div>
    <div class="wrapper col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
      <h3>フォロワーの一覧</h3>
      <% @followers.each do |user| %>
        <p>
          <%= profile_img(user) %><br>
          <%= user.name %><br>
          <%= user.email %>
        </p>
      <% end %>
    </div>
  </div>
  <%= link_to '戻る', users_path %>
</div>
